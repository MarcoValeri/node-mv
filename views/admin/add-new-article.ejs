<%- include('./../includes/head.ejs'); %>
    <title><%= pageTitle %></title>
</head>
<body>
    <div class="admin-dashboard">
        <div class="admin-dashboard__grid">
            <div class="admin-dashboard__container-menu">
                <%- include('./../includes/admin-menu.ejs'); %>
            </div>
            <div class="admin-dashboard__container-content">
                <div class="add-new-article">
                    <h2 class="add-new-article__title h2">Add New Article</h2>
                    <form action="/admin/add-new-article" method="POST">
                        <div class="add-new-article__grid">
                            <div class="add-new-article__container-title">
                                <label class="body-3" for="title">Title</label>
                                <input id="title" type="text" name="title" />
                            </div>
                            <div class="add-new-article__container-description">
                                <label class="body-3" for="description">Description</label>
                                <input id="description" type="text" name="description" />
                            </div>
                            <div class="add-new-article__container-url">
                                <label class="body-3" for="url">URL</label>
                                <input id="url" type="text" name="url" />
                            </div>
                            <div class="add-new-article__container-published">
                                <label class="body-3" for="published">Published</label>
                                <input id="published" type="date" name="published" />
                            </div>
                            <div class="add-new-article__container-updated">
                                <label class="body-3" for="updated">Updated</label>
                                <input id="updated" type="date" name="updated" />
                            </div>
                            <div class="add-new-article__container-content">
                                <textarea id="content" name="content" cols="30" rows="10"></textarea>
                            </div>
                            <div class="add-new-article__container-image">
                                <label class="body-3" for="imageUrl">Image URL</label>
                                <input id="imageUrl" type="text" name="imageUrl" />
                            </div>
                            <div class="add-new-article__container-submit">
                                <input class="button button__white" type="submit" value="Add">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

<%- include('./../includes/footer.ejs'); %>
