        <loc>https://www.marcovaleri.net/page/newsletter-confirm</loc>
    </url>
    <%
    const setDateNowGoogleFormat = getTheDate => {
        const setDateObj = new Date(getTheDate);
    
        // Day
        let setTheDay = setDateObj.getDate();
        if (setTheDay < 10) setTheDay = `0${setTheDay}`;
    
        // Month
        let setTheMonth = setDateObj.getMonth();
        if (setTheMonth < 10) setTheMonth = `0${setTheMonth}`;
    
        // Year
        let setTheYear = setDateObj.getFullYear();
    
        // Output
        const output = `${setTheYear}-${setTheMonth}-${setTheDay}`;
        return output;
    }
    %>
    <% for (let x = 0; x < allArticles.length; x++) { %>
        <url>
            <loc>https://www.marcovaleri.net/articoli/<%= allArticles[x].url %></loc>
            <lastmod><%= setDateNowGoogleFormat(allArticles[x].updated) %></lastmod>
        </url>
    <% } %>
</urlset>